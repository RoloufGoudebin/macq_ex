# Serve index page from public directory
GET     /                           controllers.FrontendController.index()

# An example route (Prefix all API routes with apiPrefix defined in application.conf)
GET     /api/summary                controllers.HomeController.appSummary


#CRUD OPERATIONS for horses
POST    /api/horses                 controllers.HorseController.create() //Create
GET     /api/horses                 controllers.HorseController.findAll() //Read ALL
GET     /api/horses/:id             controllers.HorseController.findOne(id: String) //Read One
PUT     /api/horses/:id             controllers.HorseController.update(id: String) //Read All
DELETE  /api/horses/:id             controllers.HorseController.delete(id: String) //Delete